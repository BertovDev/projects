<% layout('layouts/boilerplate') -%>
<body>
    <h1>All Camps</h1>
    <a href="campgrounds/new">New camp</a>
    <% for(let camps of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= camps.image %> " alt="" srcset="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camps.title %></h5>
                        <p class="card-text"><%= camps.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camps.location %> </small>
                        </p>
                        <a href="campgrounds/<%= camps._id %> " class="btn btn-primary">View <%= camps.title %> </a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</body>